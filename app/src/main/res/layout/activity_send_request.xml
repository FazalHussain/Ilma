<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_request"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context="com.ilma.testing.ilmaapp.Activities.SendRequestActivity">



    <EditText
        android:padding="8dp"
        android:id="@+id/reason_et"
        android:gravity="top"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:hint="Reason for leave..."
        android:background="@drawable/round_et"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:onClick="startdateClick"
            android:padding="8dp"
            android:background="@drawable/round_et"
            android:id="@+id/start_date"
            android:clickable="true"
            android:editable="false"
            android:hint="Start Date"
            android:layout_height="45dp"
            android:layout_width="200dp"/>

        <EditText
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@drawable/round_et"
            android:id="@+id/end_date"
            android:onClick="enddateClick"
            android:clickable="true"
            android:editable="false"
            android:hint="End Date"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_width="200dp"/>

    </LinearLayout>

    <Button
        android:onClick="sendClick"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_round"
        android:text="Send Request"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
