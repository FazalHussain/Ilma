<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:visibility="invisible"
        android:id="@+id/commentsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/header"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/profilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"/>



        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:id="@+id/Post_Owner"
            android:text="Anas Ahmed"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <com.ilma.testing.ilmaapp.CustomFonts.CustomEditText
        android:padding="8dp"
        android:backgroundTint="@android:color/white"
        android:layout_margin="16dp"
        android:layout_below="@+id/header"
        android:id="@+id/post_et_edit"
        android:scrollbars="vertical"
        android:layout_weight="2"
        android:singleLine="false"
        android:maxLines="10"
        android:inputType="textShortMessage"
        android:background="@drawable/round_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:hint="@string/status_title"/>

    <Button
        android:layout_below="@+id/post_et_edit"
        android:layout_marginRight="16dp"
        android:id="@+id/edit_btn"
        android:layout_alignParentRight="true"
        android:text="Edit"
        android:textColor="@android:color/white"
        android:background="@drawable/button_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="8dp" />



</RelativeLayout>