<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:id="@+id/name_title"
            android:text="NAME"
            android:textColor="@color/themecolor"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:id="@+id/name_tv"
            android:text="Faizan Bardai"
            android:textColor="@color/theme_dark_color"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/name_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_margin="8dp"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:id="@+id/address_title"
            android:text="EMAIL"
            android:textColor="@color/themecolor"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:id="@+id/email_tv"
            android:layout_marginRight="16dp"
            android:textColor="@color/theme_dark_color"
            android:text="District 1 1656 Union Street Eureka, 3700 Eureka, CA 95502 "
            android:layout_marginTop="8dp"
            android:layout_below="@+id/address_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_margin="8dp"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:id="@+id/email_title"
            android:text="Gender"
            android:textColor="@color/themecolor"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:id="@+id/gender_tv"
            android:layout_marginRight="16dp"
            android:textColor="@color/theme_dark_color"
            android:text="faizan.bardai@celeritas-solutions.com"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/email_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_margin="8dp"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>