<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.login.widget.ProfilePictureView
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/profilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"/>



        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewMedium
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/profilePic"
            android:id="@+id/Post_Owner"
            android:text="Anas Ahmed"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_create_black_24dp"
            android:id="@+id/action_edit"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewThin
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profilePic"
            android:layout_below="@+id/Post_Owner"
            android:id="@+id/duration"
            android:text="Just now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewThin
        android:id="@+id/post"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Hi"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/postImageView"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:visibility="visible"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:id="@+id/like_btn"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:text="@string/thumb_unlike"/>

        <ImageView
            android:layout_toLeftOf="@+id/comment"
            android:layout_marginTop="1dp"
            android:id="@+id/icon_comment"
            android:src="@drawable/ic_comment_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:id="@+id/comment"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:text="Comment"/>

        <com.ilma.testing.ilmaapp.CustomFonts.CustomTextViewThin
            android:id="@+id/comment_count"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="0 Comment"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>